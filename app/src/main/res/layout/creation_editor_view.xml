<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <!-- Thanh nhập trạng thái/ status bar -->
    <RelativeLayout
        android:id="@+id/baseComment_relativeLayout_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseComment_relativeLayout_LinearLayout"
        android:background="#37474f"
        android:minHeight="125dp">

        <!-- Over-take focus layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/baseComment_relativeLayout_MaterialEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/baseComment_relativeLayout_ScrollView"
            android:gravity="top"
            android:hint="Bạn đang nghĩ gì?"
            android:maxLines="50"
            android:minHeight="64dp"
            android:minLines="5"
            app:met_textColor="@color/md_white_1000"
            app:met_textColorHint="#E3E3E3" />


        <!-- action/expression buttons scrollView -->
        <ScrollView
            android:id="@+id/baseComment_relativeLayout_ScrollView"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/baseComment_relativeLayout_MaterialEditText"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.mikepenz.iconics.view.IconicsButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:text="{gmd-camera-alt}"
                    android:textColor="@color/md_white_1000"
                    android:textSize="35sp" />


                <com.mikepenz.iconics.view.IconicsButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:background="@android:color/transparent"
                    android:text="{gmd-camera-alt}"
                    android:textColor="@color/md_white_1000"
                    android:textSize="35sp" />

                <com.mikepenz.iconics.view.IconicsButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:text="{gmd-face}"
                    android:textColor="@color/md_white_1000"
                    android:textSize="35sp" />

                <com.mikepenz.iconics.view.IconicsButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:text="{gmd-loyalty}"
                    android:textColor="@color/md_white_1000"
                    android:textSize="35sp" />

                <com.mikepenz.iconics.view.IconicsButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:text="{gmd-perm-media}"
                    android:textColor="@color/md_white_1000"
                    android:textSize="35sp" />

                <com.mikepenz.iconics.view.IconicsButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:text="{gmd-gif}"
                    android:textColor="@color/md_white_1000"
                    android:textSize="35sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</merge>