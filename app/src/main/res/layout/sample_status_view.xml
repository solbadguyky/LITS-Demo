<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:minHeight="150dp"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Thanh Menu -->
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/baseComment_relativeLayout_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- Button trạng thái / StatusButton Tab-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="#1abc9c">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            app:iiv_color="@color/md_white_1000"
                            app:iiv_icon="gmd-create"
                            app:iiv_size="25dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Ghi nhận"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Button nhiệm vụ  / Mission Button Tab-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@color/md_grey_500">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            app:iiv_color="@color/md_white_1000"
                            app:iiv_icon="gmd-assistant-photo"
                            app:iiv_size="25dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Bình luận"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Button hành trình/ Journal Tab -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@color/md_grey_500">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            app:iiv_color="@color/md_white_1000"
                            app:iiv_icon="gmd-call-missed"
                            app:iiv_size="25dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Phân tán"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>
            </android.support.v7.widget.LinearLayoutCompat>

            <!-- Thanh Menu -->
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/baseComment_relativeLayout_LinearLayout_2"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_below="@+id/baseComment_relativeLayout_LinearLayout"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- Button trạng thái / StatusButton Tab-->
                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="#1abc9c">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Ghi nhận"
                            android:textColor="#ffffff"
                            android:textSize="11sp" />

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:adjustViewBounds="true"
                            app:iiv_color="@color/md_white_1000"
                            app:iiv_icon="gmd-create"
                            app:iiv_size="25dp" />

                    </LinearLayout>
                </FrameLayout>

                <!-- Button nhiệm vụ  / Mission Button Tab-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@color/md_grey_500">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Bình luận"
                            android:textColor="#ffffff"
                            android:textSize="11sp" />

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:adjustViewBounds="true"
                            app:iiv_color="@color/md_white_1000"
                            app:iiv_icon="gmd-assistant-photo"
                            app:iiv_size="25dp" />

                    </LinearLayout>
                </FrameLayout>

                <!-- Button hành trình/ Journal Tab -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@color/md_grey_500">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Phân tán"
                            android:textColor="#ffffff"
                            android:textSize="11sp" />

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:adjustViewBounds="true"
                            app:iiv_color="@color/md_white_1000"
                            app:iiv_icon="gmd-call-missed"
                            app:iiv_size="25dp" />
                    </LinearLayout>
                </FrameLayout>
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:id="@+id/baseComment_imageHolder"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/baseComment_relativeLayout_LinearLayout_2"
                android:background="@color/md_grey_600" />

            <TextView
                android:id="@+id/baseComment_Axis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/baseComment_imageHolder"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/md_white_1000" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
